package problema1_promediopeso;

import java.util.Scanner;

/**
 *
 * @author gfrieri
 */
public class Problema1_PromedioPeso {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        System.out.println("Promedio de pesos en base a la edad");
        System.out.println("");
        
        int ed, n, x, ni, jo, ad, vi, cn, cj, ca, cv;
        float peso, prom1, prom2, prom3, prom4;
        x=1; cn=0; cj=0; ca=0; cv=0;
        Scanner leer = new Scanner(System.in);
        
        System.out.println("Bienvenido al promedio de pesos");
        System.out.println("");
        System.out.println("Porfavor ingrese la cantidad de personas cuyo peso desea hallar el promedio");
        n = leer.nextInt();
        
        while(x<=n){
            System.out.print("Ingrese la edad de la persona: ");
            ed = leer.nextInt();
            System.out.print("Ingrese el peso de la persona: ");
            peso = leer.nextFloat;
            
            if(ed>=0&&ed<=12){
                ni=ni+peso;
                cn=cn+1;
            }else{
                if(ed>=13&&ed<=29){
                    jo=jo+peso;
                    cj=cj+1;
                }else{
                    if(ed>=30&&ed<=59){
                        ad=ad+peso;
                        ca=ca+1;
                    }else{
                        if(ed>=60{
                            vi=vi+peso;
                            cv=cv+1;
                        }
                        x=x+1;
                        
        }
    }
    prom1=ni/cn; prom2=jo/cj; prom3=ad/ca; prom4=vi/cv;
    System.out.println("El promedio de peso de los niños es: "+prom1);
    System.out.println("El promedio de peso de los jóvenes es: "+prom2);
    System.out.println("El promedio de peso de los adultos es: "+prom3);
    System.out.println("El promedio de peso de los viejos es: "+prom4);
}
